{
  "info": {
    "name": "TaskFlow API",
    "description": "API collection for TaskFlow — Scalable Web App with Authentication & Dashboard.\n\nBase URL: http://localhost:5000\n\n**Auth Flow:** Register → Login → Use JWT token in Authorization header for protected routes.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            },
            "description": "Check if the server is running."
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/signup",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "signup"]
            },
            "description": "Register a new user. Returns JWT token and user data.\n\n**Validation:**\n- name: 2-50 characters\n- email: valid email, unique\n- password: min 6 chars, must contain a number"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('token', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            },
            "description": "Login with email and password. Returns JWT token and user data."
          }
        }
      ]
    },
    {
      "name": "Profile",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile"]
            },
            "description": "Get the authenticated user's profile. Requires JWT."
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Updated\",\n  \"bio\": \"Full-stack developer passionate about building great products.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "profile"]
            },
            "description": "Update user profile (name, bio). Requires JWT.\n\n**Validation:**\n- name: 2-50 characters (optional)\n- bio: max 200 characters (optional)"
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "List Tasks",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks?page=1&limit=12",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"],
              "query": [
                { "key": "page", "value": "1", "description": "Page number (default: 1)" },
                { "key": "limit", "value": "12", "description": "Items per page (default: 12)" },
                { "key": "search", "value": "", "description": "Search title/description", "disabled": true },
                { "key": "status", "value": "", "description": "Filter: todo | in-progress | done", "disabled": true },
                { "key": "priority", "value": "", "description": "Filter: low | medium | high", "disabled": true },
                { "key": "sortBy", "value": "createdAt", "description": "Sort field: createdAt | title | status | priority", "disabled": true },
                { "key": "order", "value": "desc", "description": "Sort order: asc | desc", "disabled": true }
              ]
            },
            "description": "List all tasks for the authenticated user. Supports search, filter by status/priority, sorting, and pagination."
          }
        },
        {
          "name": "List Tasks (with filters)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks?status=todo&priority=high&search=urgent&sortBy=createdAt&order=desc&page=1&limit=12",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"],
              "query": [
                { "key": "status", "value": "todo" },
                { "key": "priority", "value": "high" },
                { "key": "search", "value": "urgent" },
                { "key": "sortBy", "value": "createdAt" },
                { "key": "order", "value": "desc" },
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "12" }
              ]
            },
            "description": "Example of listing tasks with all filters applied."
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                { "key": "id", "value": "TASK_ID_HERE", "description": "MongoDB ObjectId of the task" }
              ]
            },
            "description": "Get a single task by its ID. Must belong to the authenticated user."
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Complete the assignment\",\n  \"description\": \"Build the full-stack TaskFlow application with auth and CRUD.\",\n  \"status\": \"in-progress\",\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"]
            },
            "description": "Create a new task.\n\n**Required:** title (max 100 chars)\n**Optional:** description (max 500), status (todo|in-progress|done), priority (low|medium|high)"
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated task title\",\n  \"status\": \"done\",\n  \"priority\": \"low\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                { "key": "id", "value": "TASK_ID_HERE" }
              ]
            },
            "description": "Update an existing task. All fields are optional. Must belong to the authenticated user."
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/tasks/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", ":id"],
              "variable": [
                { "key": "id", "value": "TASK_ID_HERE" }
              ]
            },
            "description": "Delete a task by ID. Must belong to the authenticated user."
          }
        }
      ]
    }
  ]
}
